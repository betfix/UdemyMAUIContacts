root=true
# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

[*]

# Most of the standard properties are supported
indent_size=2
max_line_length=100

# Most frequently used .NET-coding-convention properties are supported
csharp_space_between_parentheses=expressions, type_casts, control_flow_statements
csharp_style_var_for_built_in_types=true

# ReSharper custom properties for code formatting styles
resharper_csharp_brace_style=next_line
resharper_csharp_blank_lines_around_invocable=2

# ReSharper custom properties for code syntax styles
csharp_default_private_modifier=explicit
braces_for_ifelse=not_required

# ReSharper custom properties for code inspections
resharper_possible_null_reference_exception_highlighting=error
resharper_replace_with_string_is_null_or_empty_highlighting=none
resharper_convert_if_statement_to_conditional_ternary_expression_highlighting=none

# Visual Studio IDE rules
# dotnet_diagnostic rules are supported
dotnet_diagnostic.ide0045.severity=none
dotnet_diagnostic.ide0011.severity=none
dotnet_diagnostic.ide0021.severity=none

# ReSharper properties
resharper_csharp_indent_style=tab

# Below is probably from VS (Options -> CodeEditing -> GeneralFormatterStyle => Edit .editorconfig interactively)
[*.cs]
indent_style=tab
indent_size=tab
tab_width=2
