<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MAUI.Views.ContactsPage"
             Title="Contacts">
  <Grid
    Padding="10"
    RowDefinitions="50,*,50"
    ColumnDefinitions="*">
    <SearchBar x:Name="Search"
      Grid.Row="0"
      Grid.Column="0"
      Placeholder="Search Contacts"
      TextChanged="Search_OnTextChanged"
      
      ></SearchBar>
    <ListView x:Name="ContactsList"
              Grid.Row="1"
              Grid.Column="0"
              BackgroundColor="Transparent"
              SeparatorColor="Aqua"
              RowHeight="65"
              ItemSelected="ContactsList_OnItemSelected"
              ItemTapped="ContactsList_OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell 
            Text="{Binding Path=Name}" 
            Detail="{Binding Email}" >
            <TextCell.ContextActions>
              <MenuItem Text="Delete"
                        Clicked="Item_Delete"
                        CommandParameter="{Binding .}"/>

            </TextCell.ContextActions>
          </TextCell>

        </DataTemplate>
      </ListView.ItemTemplate>

    </ListView>
    <Button x:Name="AddBtn"
            Grid.Row="2"
            Grid.Column="0"
            Text="Add Contact"
            Clicked="AddBtn_OnClicked" />
  </Grid>
</ContentPage>